<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <Button
        android:id="@+id/signInByGoogle"
        android:layout_width="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:text="Sign in By Google"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/dbText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Text From Realtime Database"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/signInByGoogle"/>

    <Button
        android:id="@+id/dbText1Btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:text="text1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dbText"/>

    <Button
        android:id="@+id/dbText2Btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:text="text2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dbText"/>

</androidx.constraintlayout.widget.ConstraintLayout>